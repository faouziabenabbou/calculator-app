pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Install Dependencies') {
            steps {
                powershell 'npm install'
            }
        }
        stage('Run Tests') {
            steps {
                powershell 'npm test'
            }
        }
        stage('Build') {
            steps {
                powershell 'echo "Build step completed!"'
            }
        }
    }
}
